<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registrar_usuarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abrahamxsaboter.minialmacen.registrar_usuarios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/titulo_almacen"
        android:text="REGISTRO DE USUARIOS"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_weight="1" />

        <!--Usuario-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Icono usuario-->
            <ImageView
                android:id="@+id/icon_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:src="@drawable/ic_usuario" />
                    <!--Usuario-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usuario"
                        app:counterEnabled="true"
                        app:counterMaxLength="15">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/id_nuevo_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:inputType="textAutoComplete"/>
                    </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!--Nombre-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <!--Icono nombre-->
                <ImageView
                    android:id="@+id/icon_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_nombre" />
                <!--Nombre-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre(s)"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/id_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:inputType="textCapWords"/>
                    </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        <!--App_Paterno-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Icono nombre-->
            <ImageView
                android:id="@+id/icon_ap_paterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:src="@drawable/ic_nombre" />
            <!--App_Paterno-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido Paterno"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_app_paterno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:inputType="textAutoComplete"/>
                </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!--App_Materno-->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <!--Icono nombre-->
            <ImageView
                android:id="@+id/icon_ap_materno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:src="@drawable/ic_nombre" />
                <!--App_Materno-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido Materno"
                    app:counterEnabled="true"
                    app:counterMaxLength="20">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/id_app_materno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:inputType="textAutoComplete"/>
                    </android.support.design.widget.TextInputLayout>
    </LinearLayout>

        <!--Edad-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <!--Icono edad-->
                <ImageView
                    android:id="@+id/icon_edad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_edad" />
                <!--Edad-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad"
                    app:counterEnabled="true"
                    app:counterMaxLength="2"
                    >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_app_edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="2"
                    android:inputType="numberDecimal"/>
                </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!--Correo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <!--Icono correo-->
                <ImageView
                    android:id="@+id/icon_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_correo" />
                <!--Correo-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    app:counterEnabled="true"
                    app:counterMaxLength="50">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_app_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:inputType="textEmailAddress"/>
                </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!--Contraseña1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <!--Icono nombre-->
                <ImageView
                    android:id="@+id/ic_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:src="@drawable/ic_pass" />
                    <!--Contraseña-->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        app:counterEnabled="true"
                        app:counterMaxLength="15">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/id_nuevo_contra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="15"
                            android:inputType="textPassword"
                            android:layout_weight="1" />
                        </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!--Contraseña2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Icono nombre-->
            <ImageView
                android:id="@+id/ic_pass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:src="@drawable/ic_pass" />
            <!--Contraseña2-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmar Contraseña"
                app:counterEnabled="true"
                app:counterMaxLength="15">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_nuevo_contra2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:inputType="textPassword"
                    android:layout_weight="1" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <!--Botones-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|top">
            <!--Botones-->
            <Button
                android:layout_marginTop="25dp"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:drawableTop="@drawable/ic_enviar"
                android:theme="@style/boton"
                android:onClick="EnvioDatosCuenta"
                android:text="CREAR CUENTA" />
            <Button
                android:layout_marginTop="25dp"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:drawableTop="@drawable/ic_cancelar"
                android:theme="@style/boton"
                android:onClick="CancelarReg"
                android:text="Cancelar" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
