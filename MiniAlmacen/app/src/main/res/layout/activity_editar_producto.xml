<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editar_producto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.abrahamxsaboter.minialmacen.EditarProducto">

    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/nomProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombre del producto"/>
    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/Descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"/>
    <TextView
        android:id="@+id/Tipo"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo"/>
    <TextView
        android:id="@+id/Cantidad"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|top">

        <Button
            android:layout_marginTop="25dp"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_editar"
            android:text="Editar"
            android:theme="@style/boton"
            android:onClick="EditData"
            />
        <Button
            android:layout_marginTop="25dp"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_confirmar"
            android:text="Confirmar"
            android:theme="@style/boton"
            />
        <Button
            android:layout_marginTop="25dp"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_cancelar"
            android:text="Cancelar"
            android:theme="@style/boton"
            android:onClick="Cancelar"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/icono_principal"
        android:id="@+id/imageView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_marginTop="25dp"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_menu_camera"
            android:text="Camara"
            android:theme="@style/boton"
            android:onClick="ActivaCamara"
            />
    </LinearLayout>


</LinearLayout>
